<div class="container">
    <!-- Display the book list in a table -->
    <h5><i class="fa-solid fa-book fa-sm"></i> Book List</h5>

    <div class="mt-3">
        <table class="table table-striped table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Title</th>
                    <th scope="col">Genres</th>
                    <th scope="col">Authors</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {{#each books}}
                <tr>
                    <td>{{this.title}}</td>
                    <td>{{this.genres}}</td>
                    <td>{{this.authors}}</td>
                    <td class="text-center">
                        <a href="/book/edit/{{this.id}}" class="btn btn-primary btn-sm"><i class="fa-solid fa-edit fa-sm"></i> Edit</a>
                    </td>
                    <td class="text-center">
                        <a href="/book/delete/{{this.id}}" class="btn btn-danger btn-sm"><i class="fa-solid fa-trash fa-sm"></i> Delete</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>